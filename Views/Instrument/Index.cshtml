@model IEnumerable<aleck3a_webapp.Models.Instrument>
    
    <div class="pt-2">
        <div class="row">
            <div class="col-6">
                <h2> Instruments List</h2> 
            </div>
            <div class="col-6 text-right" >
                <a asp-action="Create" class="btn btn-primary">
                    Add New Instrument
                </a>
            </div>
        </div>
        <br>

        @if (Model.Count() > 0)
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Item Name</th>
                        <th>Type Name</th>
                        <th>Price</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><img src="@item.ImagePath" alt="" width="50%"></td>
                            <td width="25%">@item.Item.Name</td>
                            <td width="25%">@item.Type.Name</td>
                            <td width="25%">@item.Price</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                                <form method="post">
                                    <button asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</button>
                                </form>                            
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p> No type exists</p>
        }
    </div>